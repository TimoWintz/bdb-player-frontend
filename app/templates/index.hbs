<div class="panel panel-default">
    <div class="list-group">
        {{#each model key="id" as |album|}} 
            {{#context-menu-zone class="pointer-cursor" type="album" objectId=album.id}}
            <div href="#" class="list-group-item">
                <div class="media album-list-item">
                    <div class="media-left" {{action "send" true true "album" false album.id}}>
                        <img src="/assets/images/albumicon.svg">
                    </div>
                    <div class="media-body" {{action "toggleAlbum" album.id}}>
                        <h4>{{album.album}}</h4>
                        {{album.albumartist}}
                    </div>
                    <div class="media-right">
                        {{album.year}}
                    </div>
                </div>
            </div>
            {{/context-menu-zone}}
        {{/each}}
    </div>
{{#bs-modal open=showAlbum footer=false}}
    {{#if selectedAlbum}}
        {{album-view albumId=selectedAlbum}}
    {{/if}}
{{/bs-modal}}
</div>
