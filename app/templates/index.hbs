<div class="panel panel-default">
    <ul class="list-group">
        {{#each model as |album|}} 
            <button {{action "routeToAlbum" album.id on="click"}}type="button" class="list-group-item">
                {{album.albumartist}} - {{album.album}}<span class="pull-right">{{album.year}}</span>
            </button>
        {{/each}}
        {{#infinity-loader infinityModel=model}}
            {{#if model.reachedInfinity}}
            {{else}}
                <div class="spinner">
                    <i class="fa fa-spinner fa-spin fa-4x"></i>
                </div>
            {{/if}}
        {{/infinity-loader}}
    </ul>
</div>
